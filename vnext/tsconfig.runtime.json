{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "../dist/vnext",
    "rootDir": "../",
    "declaration": false,
    "sourceMap": false,
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "..",
    "paths": {
      "lib/*": ["lib/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../lib/**/*.ts"
  ],
  "exclude": [
    "scripts/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/test-*.ts",
    "final-validation.ts",
    "teacher/**/*.ts"
  ]
}

